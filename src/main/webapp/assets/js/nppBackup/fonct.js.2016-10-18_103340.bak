$(document).ready(function(){
	$("#publier").click(function(){
		var stat=document.getElementById('statutContent').value;
		$.ajax({
			url : 'addPost.php',
			type : 'POST',
			data : 'statut=' + stat,
			dataType : 'html',
			success : function(valn, statut){
				console.log(statut);
				suppr("statutForm");
				insertStatut(valn,"statutForm");
				document.getElementById('comForm').setAttribute("style","display: block;");
			},

			error : function(valn, statut, erreur){
				console.log(valn);
				console.log(statut);
				console.log(erreur);
			},
		});				   
	});
	$("#commenter").click(function(){
		var com=document.getElementById('commentContent').value;
		$.ajax({
			url : 'addCom.php',
			type : 'POST',
			data : 'comment=' + com,
			dataType : 'html',
			success : function(valn, statut){
				console.log(statut);
				insertCom(valn, "comRehetra");
				document.getElementById('commentContent').value="";
			},

			error : function(valn, statut, erreur){
				console.log(valn);
				console.log(statut);
				console.log(erreur);
			},
		});				   
	});
});