$(document).ready(function(){
	$("#login").click(function(){
		var usr=document.getElementById('usr').value;
		var pass=document.getElementById('pass').value;
		console.log(usr);
		$.ajax({
			url : ''+'<?php echo base url();?>'+'ITUBook/Login/verif',
			type : 'POST',
			data : {psd: usr, pwd: pass},
			dataType : 'json',
			success : function(valn, statut){
				console.log(valn);
				console.log(statut);
			},

			error : function(valn, statut, erreur){
				console.log(valn);
				console.log(statut);
				console.log(erreur);
			},
		});				   
	});
});